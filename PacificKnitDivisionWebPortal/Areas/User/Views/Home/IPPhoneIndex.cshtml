<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="main-div">
    <h2 class="text-center">IP Phone Index</h2>
    <div class="row mb-3">
        <div class="col-md-6 mt-2">
                @* <select id="dept" class="w-25">
