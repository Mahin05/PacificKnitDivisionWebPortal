@model IEnumerable<PacificKnitDivisionWebPortal.Models.MailAddress>

@{
    ViewData["Title"] = "Index";
}
<div class="main-div">
    <h2 class="text-center">Mail Address</h2>
    <div class="row mb-3">
        <div class="col-md-4">
            <p>
                <a style="border: 1px solid #00000047;" class="btn" asp-action="Mail"><i class="bi bi-eye me-1"></i>View</a>
            </p>
        </div>
        <div class="col-md-4 mt-2">
            <div class="float-end">
                <div class="input-group" style="max-width: 400px;">
                    <select id="unit" class="p-1 border rounded" style="cursor:pointer">
                        <option value="0">All Unit</option>
                    </select>
                    <input id="SearchText" type="text" class="form-control" placeholder="Search..." aria-label="Search">
                    <button id="Search" class="btn border" type="button">
                        <i class="bi bi-search"></i>
                    </button>
                </div>

            </div>
        </div>
        <div class="col-md-4 mt-2">
            <div class="float-end">
                <button id="download-pdf" style="border: 1px solid #00000047;" class="rounded py-1"><i class="bi bi-cloud-arrow-down me-1"></i>Download PDF</button>
            </div>
        </div>
    </div>

    <div id="mailAddress-table"></div>
</div>




@section Scripts {
