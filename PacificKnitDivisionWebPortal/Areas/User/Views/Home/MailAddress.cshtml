                            layout: "fitColumns",
                            placeholder: "No Data Set",
                            pagination: "local",
                            paginationSize: 20,
                            paginationSizeSelector: [5, 10, 15, 20,25,30],
                            movableColumns: true,
                            paginationCounter: "rows",
                            columns: [
                                { title: "SL", field: "department.name", sorter: "string", width: 100 },
                                { title: "Name", field: "name", sorter: "string"},
                                { title: "Designation", field: "designation.name", sorter: "string"},
                                { title: "Department", field: "department.name", sorter: "string"},
                                { title: "Mail Address", field: "email", sorter: "string"},
                                { title: "Unit", field: "unit.name", sorter: "string"}
                            ],
                        });
                    }
                    else {
                        console.log("No data found.");
                    }
                },
