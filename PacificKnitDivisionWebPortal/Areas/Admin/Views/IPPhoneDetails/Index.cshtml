@model IEnumerable<PacificKnitDivisionWebPortal.Models.IPPhoneDetails>

@{
    ViewData["Title"] = "Index";
}
<div class="main-div">
    <h1 class="text-center">IP Phone Details List</h1>

    <p>
        <a class="btn btn-primary" asp-action="Upsert">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IPNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Unit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Department)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IPNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.Name)
                    </td>
                    <td>

                        <a class="btn btn-success" asp-action="Upsert" asp-route-id="@item.Id"><i class="bi bi-pen-fill"></i></a> |
                        <a href="#" class="btn btn-danger delete-button" data-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>




@section Scripts {
    <script type="text/javascript">
         $(document).ready(function () {
            $('.delete-button').click(function (e) {
                e.preventDefault();

                 var id = $(this).data('id');

                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/Admin/IPPhoneDetails/Delete/' + id,
                            type: 'POST',
                            success: function (response) {
                                if (response.success) {
                                    Swal.fire(
                                        'Deleted!',
                                        response.message,
                                        'success'
                                    ).then(() => {
                                        location.reload();
                                    });
                                }
                                else {
                                    Swal.fire(
                                        'Failed!',
                                        response.message || 'Something went wrong.',
                                        'error'
                                    );
                                }
                            },
                            error: function () {
                                Swal.fire(
                                    'Error!',
                                    'An error occurred while deleting.',
                                    'error'
                                );
                            }
                        });
                    }
                });
            });
        });
    </script>
}