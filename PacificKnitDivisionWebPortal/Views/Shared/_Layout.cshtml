@using OnlineBookOrderManagementSystem.Data
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Pacific Knit Division Web Portal</title>
    <link rel="icon" type="image/x-icon" href="~/Assets/logo/Icon.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/PacificKnitDivisionWebPortal.styles.css" asp-append-version="true" />
	<link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
	<link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
	<link href="~/lib/toastr.js/toastr.css" rel="stylesheet" />
	<link href="~/lib/toastr.js/toastr.min.css" rel="stylesheet" />
	<link href="~/lib/sweetalert2/sweetalert2.css" rel="stylesheet" />
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="https://unpkg.com/tabulator-tables@6.3.1/dist/css/tabulator.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tabulator/6.3.1/css/tabulator_bootstrap5.min.css" integrity="sha512-qDEgvDbdp7tq+ytU/OgCzWfvbfdEe3pv0yEOMz/gurMcR0BWNgIF6I4VKeoACEj5E5PFf1uo3Vzuwk/ga9zeUg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body style="background-repeat:no-repeat; background-size:cover">
    @if (ViewBag.HideLayoutParts != true)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand bg-transparent" asp-area="User" asp-controller="Home" asp-action="Index">
                        <img style="height:45px; width:auto;" src="~/Assets/logo/Pacific Knit Division.png" />
                    </a>
                    <a class="navbar-brand" asp-area="User" asp-controller="Home" asp-action="Index">Web Portal</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            @if (User.IsInRole(SD.Role_Admin))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Document" asp-action="Index">Documents</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Org Setup
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Unit" asp-action="Index">Unit</a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Department" asp-action="Index">Department</a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Designation" asp-action="Index">Designation</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Directory
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="IPPhoneDetails" asp-action="Index">IP Phone Details</a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="MailAddress" asp-action="Index">Mail Address</a></li>
                                    </ul>
                                </li>
                            }
                        </ul>
                        <partial name="_LoginPartial"></partial>
                    </div>
                </div>
            </nav>
        </header>
    }

   
    <div class="container">
        <main role="main" class="pt-2 pb-2">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>
    @if (ViewBag.HideLayoutParts != true)
    {

        <footer class="border-top footer text-light" style="background:#061640;">
            <div class="container text-center fw-bold" style="color:white;">
                &copy; Developed By : ICT Department @* <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
            </div>
        </footer>
    }

	<script src="~/lib/toastr.js/toastr.min.js"></script>
	<script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://unpkg.com/tabulator-tables@6.3.1/dist/js/tabulator.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
